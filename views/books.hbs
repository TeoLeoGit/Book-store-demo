                        <!--  -->
                      <table id="example" class="table table-striped" style="width:100%">
                          <thead>
                              <tr>
                                  <th>ID</th>
                                  <th>Name</th>
                                  <th>Writers</th>
                                  <th>Price</th>
                                  <th>Type</th>
                                  <th>Publisher</th>
                                  <th>Stock</th>
                              </tr>
                          </thead>
                          <tbody>
                              {{#each books}}
                              <tr>
                                  <td>{{this._id}}</td>
                                  <td>{{this.name}}</td>
                                  <td>
                                    {{#each this.writers}} 
                                        {{this}}  <br>
                                    {{/each}} 
                                  </td>
                                  <td>{{this.price}}</td>
                                  <td>
                                    {{#each this.types}} 
                                        {{this}}  <br>
                                    {{/each}} 
                                  </td>
                                  <td>{{this.publisher}}</td>
                                  <td>{{this.stock}}</td>
                                  <td>
                                    <form action="/books/detail" method="get" style="display: inline-block;">
                                      <button type="submit" name="_id" value="{{this._id}}" class="btn btn-default btn-xs" ><span class="bi bi-pencil-square"></span></button>
                                    </form>
                                    <form action="/books/delete" method="post" style="display: inline-block;">
                                      <button type="submit" name="_id" value="{{this._id}}" class="btn btn-default btn-xs" ><span class="bi bi-trash-fill"></span></button>
                                    </form>
                                  </td>
                              </tr>
                              {{/each}}
                                                                                          
                          </tbody>
                      </table>
                  </div>
              </div>
                 <!-- Pagination -->
                    <ul class="pagination">
                      <li class="page-item"><a class="page-link" href="/books{{subRoute}}/{{prev}}">Previous</a></li>
                      <li class="page-item"><a class="page-link" href="/books{{subRoute}}/{{page}}">{{page}}</a></li>
                      <li class="page-item"><a class="page-link" href="/books{{subRoute}}/{{next}}">Next</a></li>                  
                    </ul>
                <!-- Modal -->
                <button id="add-product-btn" type="button" class="btn" data-toggle="modal" data-target="#addBookModal">Add new book</button>
                <div class="modal fade" id="addBookModal" tabindex="-1" role="dialog" aria-labelledby="addBBookModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="addBookModalLabel">Adding new book</h5>
                        </div>
                        <div class="modal-body">
                            <form action="/books/add" method="POST">
                                <div class="row">
                                  <div class="form-group col-md-6">
                                    <label for="bookName">Name</label>
                                    <input type="text" class="form-control" id="bookName" name="name" placeholder="Name" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="bookPrice">Price</label>
                                    <input type="number" step="0.01" class="form-control" id="bookPrice" name ="price" placeholder="Price" required> 
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="bookWriters">Writers</label>
                                    <input type="text" class="form-control" id="bookWriters" name="writers" placeholder="Writers" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="bookTypes">Types</label>
                                    <input type="text" class="form-control" id="bookTypes" name="types" placeholder="Types" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="bookPublisher">Publisher</label>
                                    <input type="text" class="form-control" id="bookPublisher" name="publisher" placeholder="Publisher" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="bookStock">Stock</label>
                                    <input type="number" step="1" class="form-control" id="bookStock" name="stock" placeholder="Stock" required>
                                  </div>
                                </div>                                                       
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </form>
                        </div>
                      </div>
                    </div>
                </div>
                <!-- End of Modal  -->
                <!-- Modal for order -->
                <button id="add-product-btn" type="button" class="btn" data-toggle="modal" data-target="#addOrderModal">Add new order</button>
                <div class="modal fade" id="addOrderModal" tabindex="-1" role="dialog" aria-labelledby="addBBookModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="addBookModalLabel">Adding new order</h5>
                        </div>
                        <div class="modal-body">
                            <form action="/bookOrders/add" method="POST">
                                <div class="row">
                                  <div class="form-group col-md-6">
                                    <label for="customerName">Customer</label>
                                    <input type="text" class="form-control" id="customerName" name="customerName" placeholder="Customer" required>
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="phone">Phone</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone">
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" name ="email" placeholder="Email"> 
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="bookList">Book list</label>
                                    <input type="text" class="form-control" id="bookList" name="bookIDs" placeholder="Fill in the ID of books" required>
                                  </div>
                                </div>                                                       
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </form>
                        </div>
                      </div>
                    </div>
                </div>
                <!-- End of Modal  -->
                
            </div>  
            <!-- End of page content -->